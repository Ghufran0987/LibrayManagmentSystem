@model IEnumerable<WebApplication1.Models.stock>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Admin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Qty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Available)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Book.Book_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Qty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Available)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Book.Book_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Stock_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Stock_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Stock_Id })
        </td>
    </tr>
}

</table>
